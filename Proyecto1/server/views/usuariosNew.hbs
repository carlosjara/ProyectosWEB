<div class="row">
    <div class="col-md-12 text-center"><h1>Seleccione un usuario</h1></div>
</div>
<div class="row">
    <div class="col-md-12 text-center">
        <a type="button" href="../reservas" id="cancel_button" class="btn btn-danger">Cancelar</a>
    </div>
</div>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-1 text-center">
        <h3>#</h3>
    </div>
    <div class="col-md-1 text-center">
        <h3>NOMBRE</h3>
    </div>
    <div class="col-md-1 text-center">
        <h3>DIRECCION</h3>
    </div>
    <div class="col-md-1 text-center">
        <h3>TELEFONO</h3>
    </div>
    <div class="col-md-4"></div>
</div>

<div class="row">
    <ul class="list-group">
        {{#each usuarios}}
        <li class="list-group-item">
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-1 text-center">
                    <h4>{{usuario_id}}</h4>
                </div>
                <div class="col-md-1 text-center">
                    <h4>{{name}}</h4>
                </div>
                <div class="col-md-1 text-center">
                    <h4>{{direccion}}</h4>
                </div>
                <div class="col-md-1 text-center">
                    <h4>{{telefono}}</h4>
                </div>
                <div class="col-md-1 text-center">
                    <a type="button" href="../habitaciones/new/{{usuario_id}}" id="select_button" class="btn btn-success">Seleccionar</a>
                </div>
                <div class="col-md-3"></div>
            </div>
        </li>
        {{/each}}
    </ul>
</div>