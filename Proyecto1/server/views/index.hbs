<div class="row">
    <div class="col-md-12 text-center"><h1>Reservas</h1></div>
</div>
<div class="row">
    <div class="col-md-12 text-center">
        <a type="button" href="reservas/new" id="add_button" class="btn btn-success">Nueva</a>
    </div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-1 text-center">
        <h3>ID</h3>
    </div>
    <div class="col-md-1 text-center">
        <h3>ESTADO</h3>
    </div>
    <div class="col-md-1 text-center">
        <h3>INICIO</h3>
    </div>
    <div class="col-md-1 text-center">
        <h3>FIN</h3>
    </div>
    <div class="col-md-1 text-center">
        <h3>HABITACIÃ“N</h3>
    </div>
    <div class="col-md-1 text-center">
        <h3>USUARIO</h3>
    </div>
    <div class="col-md-3"></div>
</div>

<div class="row">
    <ul class="list-group">
        {{#each reservas}}
        <li class="list-group-item">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-1 text-center">
                    <h4>{{reserva_id}}</h4>
                </div>
                <div class="col-md-1 text-center">
                    <h4>{{estado_reserva}}</h4>
                </div>
                <div class="col-md-1 text-center">
                    <h4>{{fecha_inicio}}</h4>
                </div>
                <div class="col-md-1 text-center">
                    <h4>{{fecha_fin}}</h4>
                </div>
                <div class="col-md-1 text-center">
                    <h4>{{habitacion}}</h4>
                </div>
                <div class="col-md-1 text-center">
                    <h4>{{usuario}}</h4>
                </div>
                <div class="col-md-1 text-center">
                    <a href="reservas/delete/{{id}}" class="action_button btn btn-danger">Eliminar</a>
                </div>
                <div class="col-md-2"></div>
            </div>
        </li>
        {{/each}}
    </ul>
</div>